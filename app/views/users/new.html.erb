<div class="sign-in-form">
  <h1>tumblr</h1>
  <form action="<%= users_url %>" method="POST">
    <input type="text" name="user[email]" placeholder="Email" class="sign-input">
    <br>
    <input type="password" name="user[password]" placeholder="Password" class="sign-input">
    <br>
    <input type="text" name="user[username]" placeholder="Username" class="sign-input">
    <br>
    <input type="submit" class="sign-btn" value="Sign Up">

  </form>
  <a href="/auth/facebook">LOGIN WITH FACEBOOK!</a>

</div>
<footer>
<%= link_to "Sign In", new_session_url, class: "other-btn" %>
</footer>