
<div class="sign-in-form">
  <h1>tumblr</h1>
  <form action="<%= session_url %>" method="POST">
    <input class="sign-input" type="text" name="user[email]" placeholder="Email">
    <br>
    <input class="sign-input" type="password" name="user[password]" placeholder="Password">
    <br>
    <input class="sign-btn" type="submit" value="Sign In">

  </form>
  <a href="/auth/facebook">LOGIN WITH FACEBOOK!</a>
</div>
<footer>
   <%= link_to "Sign Up", new_user_url, class: "other-btn" %>
</footer>